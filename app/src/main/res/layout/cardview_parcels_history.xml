<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:background="#F8F7F7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/image_parcel_history"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/parcel" />

            <TextView
                android:id="@+id/text_view_track_number"
                style="@style/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_parcel_history"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="@string/track_number" />

            <TextView
                android:id="@+id/tracknumber"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_track_number"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/text_view_owner"
                style="@style/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tracknumber"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/owner" />


            <TextView
                android:id="@+id/owner_surname"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_owner"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/owner_name"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_owner"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/owner_surname" />

            <TextView
                android:id="@+id/text_recipient"
                style="@style/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tracknumber"
                android:layout_marginStart="130dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/text_view_owner"
                android:text="@string/receiver" />

            <TextView
                android:id="@+id/receiver_name"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_recipient"
                android:layout_toRightOf="@+id/text_view_owner"
                android:layout_marginStart="130dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/receiver_surname"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_recipient"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/receiver_name" />

            <TextView
                android:id="@+id/text_check_in"
                style="@style/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/owner_surname"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="วันเวลาที่เจ้าหน้าที่รับพัสดุ" />

            <TextView
                android:id="@+id/check_in"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_check_in"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/check_in_time"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_in"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/text_check_out"
                style="@style/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receiver_surname"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/text_check_in"
                android:text="วันเวลารับพัสดุ" />

            <TextView
                android:id="@+id/check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_check_out"
                android:layout_toRightOf="@+id/text_check_in"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                style="@style/text_view_value"/>

            <TextView
                android:id="@+id/check_out_time"
                style="@style/text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_out"
                android:layout_toRightOf="@+id/text_check_in"
                android:layout_marginStart="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="16dp"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>